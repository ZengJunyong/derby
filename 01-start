Mac内置的
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_40.jdk/Contents/Home
export DERBY_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_40.jdk/Contents/Home/db
export DERBY_INSTALL=/Library/Java/JavaVirtualMachines/jdk1.8.0_40.jdk/Contents/Home/db
export PATH=$DERBY_INSTALL/bin:$PATH
export CLASSPATH=$DERBY_INSTALL/lib/derby.jar:$DERBY_INSTALL/lib/derbytools.jar:.

下载的derby
https://db.apache.org/derby/papers/DerbyTut/install_software.html

export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_40.jdk/Contents/Home
export DERBY_HOME=/Users/yong/Gaff/libs/db-derby-10.13.1.1-bin
export DERBY_INSTALL=/Users/yong/Gaff/libs/db-derby-10.13.1.1-bin
export PATH=$DERBY_INSTALL/bin:$PATH
export CLASSPATH=$DERBY_INSTALL/lib/derby.jar:$DERBY_INSTALL/lib/derbytools.jar:.
$DERBY_HOME/bin/setEmbeddedCP

connect 'jdbc:derby:/Users/yong/Gaff/libs/db-derby-10.13.1.1-bin/demo/databases/toursdb';
show connections;
disconnect;
connect 'jdbc:derby:/Users/yong/Gaff/libs/db-derby-10.13.1.1-bin/demo/databases/yong;create=true';

connect 'jdbc:derby:/Users/yong/Gaff/libs/db-derby-10.13.1.1-bin/demo/databases/yong';

run '/Users/yong/learn/Derby/01.sql';